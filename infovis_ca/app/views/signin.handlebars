<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-left">
      <h3>로그인</h3>
      {{#if error}}
      <div class="card text-white bg-warning mb-3">
        <div class="card-body">
          <p class="card-text"><strong>로그인 에러</strong></p>
          <p class="card-text">{{error}}</p>
        </div>
      </div>
      {{/if}}
      <div class="card">
        <div class="card-body">
          <form action="signin_process" method="post">
            <div class="form-group">
              <label for="signin_id">이용자 아이디</label>
              <input type="text" class="form-control" id="singin_id" name="signin_id" placeholder="이용자 아이디를 입력하세요.">
            </div>
            <div class="form-group">
              <label for="signin_password">비밀번호</label>
              <input type="password" class="form-control" id="signin_password" name="signin_password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary">로그인</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>