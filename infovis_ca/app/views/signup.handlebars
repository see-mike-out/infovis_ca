<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-left">
      <h3>회원 추가</h3>
      <div class="card">
        <div class="card-body">
          <form role="form" action="/signup_process" method="POST">
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <div class="form-group">
              <label for="signin_id">이용자 아이디</label>
              <input type="text" class="form-control" id="singin_id" name="singin_id" placeholder="이용자 아이디를 입력하세요.">
            </div>
            <div class="form-group">
              <label for="signin_password">비밀번호</label>
              <input type="password" class="form-control" id="signin_password" name="signin_password" placeholder="Password">
            </div>
            <div class="form-group">
              <label for="signin_password_conf">비밀번호 확인</label>
              <input type="password" class="form-control" id="signin_password_conf" name="signin_password_conf" placeholder="Password Confirm">
            </div>
            <button type="submit" class="btn btn-primary">추가</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>